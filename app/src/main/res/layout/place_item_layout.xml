<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#FFBC59"
    android:layout_marginTop="4dp"
    app:cardElevation="4dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="16dp">

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/name_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="25dp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:fontFamily="@font/akayakanadaka_regular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/area_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Area"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:fontFamily="@font/akayakanadaka_regular"
        app:layout_constraintTop_toBottomOf="@id/name_view_layout"
        app:layout_constraintStart_toStartOf="parent"
        />


    <TextView
        android:id="@+id/rating_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:padding="5dp"
        android:fontFamily="@font/akayakanadaka_regular"
        app:layout_constraintTop_toBottomOf="@id/area_view_layout"
        app:layout_constraintStart_toStartOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>